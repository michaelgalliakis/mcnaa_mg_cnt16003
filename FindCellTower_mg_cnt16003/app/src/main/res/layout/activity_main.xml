<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mg.mcnaa.findcelltower.findcelltower_mg_cnt16003.Main">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="2dp">

        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.70"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteY="0dp">

            <ImageButton
                android:id="@+id/refresh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                app:srcCompat="@mipmap/refresh" />

            <ImageButton
                android:id="@+id/info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                app:srcCompat="@mipmap/info" />

            <ImageButton
                android:id="@+id/zoomcelltower"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                app:srcCompat="@mipmap/zoomcelltowerdis" />

            <ImageButton
                android:id="@+id/zoomgps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                app:srcCompat="@mipmap/zoomgps" />

            <ImageButton
                android:id="@+id/tei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".20"
                app:srcCompat="@mipmap/tei" />
        </LinearLayout>

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:text="TextView" />

        <ProgressBar
            android:id="@+id/checkbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.10" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
